                                        <Label Text="{Binding _id}" FontSize="24" FontFamily="RobotoBold" />

                                    </StackLayout>
                                </Frame>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </Grid>-->
            </StackLayout>
        </Grid>
        
        
